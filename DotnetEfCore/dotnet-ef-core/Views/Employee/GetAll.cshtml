@model IEnumerable<dotnet_ef_core.DataContext.EmployeeEntity>
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>
<a asp-action="Add"><button class="btn btn-primary">Add Employee</button></a>
<table class="table table-responsive">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Number</th>
        <th>Address</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model )
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Position</td>
            <td>@item.Number</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
    
</table>
