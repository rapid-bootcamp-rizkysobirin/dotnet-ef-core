@model dotnet_ef_core.DataContext.EmployeeEntity
@{
    ViewData["Title"] = "Employee Edit Data";
}

<h2>Form Edit Employee</h2>

<form asp-action="Update" method="post">
    @*<div class="form-group">
        <label asp-for="Id">Asset Id</label>
        <input asp-for="Id" class="form-control">
    </div>*@
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Eployee Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Position">Position</label>
        <input asp-for="Position" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Number">No. HP</label>
        <input type="number" asp-for="Number" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Update</button>
        <button asp-action="GetAll" class="btn btn-sm btn-success">Back</button>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}