@model IEnumerable<dotnet_ef_core.DataContext.AdminEntity>

@{
    ViewData["Title"] = "Admin List";
}

<h2>Admin List</h2>
<a asp-action="Add"><button class="btn btn-primary">Add Admin</button></a>
<table class="table table-responsive">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Role ID</th>
        <th>Email</th>
        <th>Audit ID</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model )
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Role</td>
            <td>@item.Email</td>
            <td>@item.IdAudit</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
    
</table>