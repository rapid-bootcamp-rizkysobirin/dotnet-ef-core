@model IEnumerable<dotnet_ef_core.DataContext.RequestEntity>
@{
    ViewData["Title"] = "Request List";
}

<h2>Request List</h2>
<a asp-action="Add"><button class="btn btn-primary">Add Request</button></a>
<table class="table table-responsive">
    <thead>
    <tr>
        <th>ID</th>
        <th>ID Asset</th>
        <th>ID PIC</th>
        <th>Request Specifications</th>
        <th>Necessarye</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model )
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.IdAsset</td>
            <td>@item.PicId</td>
            <td>@item.SpecificationReq</td>
            <td>@item.Necessary</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
    
</table>
